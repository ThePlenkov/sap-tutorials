---
interface Props {
  showBack?: boolean;
}

const { showBack = false } = Astro.props;
---

<header class="bg-primary dark:bg-background-alt text-text-inverse">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between gap-4">
    <div class="flex items-center gap-4 min-w-0">
      <a 
        href="/"
        class="text-text-inverse dark:text-text font-semibold whitespace-nowrap"
      >
        Workshop Tutorials
      </a>
      {showBack && (
        <a 
          href="/"
          class="text-text-inverse dark:text-text whitespace-nowrap"
        >
          ‚Üê Back to Tutorials
        </a>
      )}
    </div>
    <div class="flex-1 max-w-xl">
      <slot name="search" />
    </div>
    <div class="flex items-center">
      <slot />
    </div>
  </div>
</header>