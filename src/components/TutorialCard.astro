---
interface Props {
  tutorial: {
    slug: string;
    data: {
      title: string;
      description: string;
    };
  };
}

const { tutorial } = Astro.props;
---

<a 
  href={`/tutorials/${tutorial.slug}`}
  class="block h-full p-6 bg-background-alt dark:bg-background-alt rounded-lg shadow-md hover:shadow-lg transition-all duration-300 border-2 border-transparent hover:border-accent transform hover:-translate-y-1"
  data-tutorial-card
  data-title={tutorial.data.title}
  data-description={tutorial.data.description}
>
  <h2 class="text-2xl font-semibold mb-2 text-text dark:text-text">{tutorial.data.title}</h2>
  <p class="text-text-light dark:text-text-light">{tutorial.data.description}</p>
</a>